<div class="modal is-paneled-right is-active" data-id="department">
  <div class="modal-background"></div>
  <div class="modal-content" style="width: 50%">
    <div class="modal-card">
      <div class="box">
        <div class="content">
          <div class="title-enc">
            <h3><span>Update Department</span></h3>
            <div class="align-inside-title align-right" style="top:0;">
              <button class="delete" aria-label="close" data-dismiss="modal"></button>
            </div>
          </div>
          <%= form_with url: employee_path(@employee), data: {remote: true}, scope: :employee, method: :patch do |f| %>
            <div class="field">
              <p class="control">
                <label for="department_id" class="label">Choose Department</label>
                <%= f.select :department_id, options_for_select(Department.all.pluck(:name, :id)), class: "select", prompt: true %>
              </p>
            </div>
            <div class="field">
              <p class="control">
                <%= f.submit "Save", class: "button is-success is-small" %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
