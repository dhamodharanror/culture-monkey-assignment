<div class="modal is-paneled-right is-active" data-id="employees">
  <div class="modal-background"></div>
  <div class="modal-content" style="width: 50%">
    <div class="modal-card">
      <div class="box">
        <div class="content">
          <div class="title-enc">
            <h3><span>Create Employee</span></h3>
          </div>
          <%= form_with url: employees_path, data: {remote: true}, scope: :employee, method: :post do |f| %>
            <div class="field">
              <p class="control">
                <label for="department_id" class="label">First Name</label>
                <%= f.text_field :first_name, class: 'input', placeholder: 'First name', required: true %>
              </p>
            </div>
            <div class="field">
              <p class="control">
                <label for="department_id" class="label">Last Name</label>
                <%= f.text_field :last_name, class: 'input', placeholder: 'Last name', required: true %>
              </p>
            </div>
            <div class="field">
              <p class="control">
                <label for="department_id" class="label">Email</label>
                <%= f.text_field :email_address, class: 'input', placeholder: 'Email Address', required: true %>
              </p>
            </div>
            <div class="field">
              <p class="control">
                <label for="department_id" class="label">Salary Amount</label>
                <%= f.text_field :salary, class: 'input', placeholder: 'Salary', required: true %>
              </p>
            </div>
            <div class="field">
              <p class="control">
                <label for="department_id" class="label">Phone</label>
                <%= f.text_field :phone, class: 'input', placeholder: 'Phone', required: true %>
              </p>
            </div>
            <div class="field">
              <p class="control">
                <label for="department_id" class="label">Department</label>
                <%= f.select :department_id, options_for_select(Department.all.pluck(:name, :id)), class: "select", prompt: true %>
              </p>
            </div>
            <div class="field">
              <p class="control">
                <%= f.submit "Save", class: "button is-success is-small" %>
              </p>
            </div>
          <% end %>
        </div>
        <div class="has-text-right">
          <a data-dismiss="modal" class="button is-danger is-light">Close</a>
        </div>
      </div>
    </div>
  </div>
</div>
